{
  "name": "JWT Utils",
  "description": "Utilities for update JWT claims and body data. Communicates directly with Consul to get secret.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://hconengapp01/"
  ],
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/jwt-logo-16.png",
      "32": "/images/jwt-logo-32.png",
      "48": "/images/jwt-logo-48.png",
      "128": "/images/jwt-logo-128.png"
    }
  },
  "icons": {
    "16": "/images/jwt-logo-16.png",
    "32": "/images/jwt-logo-32.png",
    "48": "/images/jwt-logo-48.png",
    "128": "/images/jwt-logo-128.png"
  }
}